package ejemploList;

import java.util.List;

public class CrudPersona {

	private List <Persona> lista;

	public CrudPersona(List<Persona> lista) {
		super();
		this.lista = lista;
	}
	
	public Persona buscarPorDni(String dni, Persona p) {
		boolean encontrado = false;
		int i = 0;
		while(i<lista.size() && !encontrado) {
			if(dni.equalsIgnoreCase(p.getDni())) {
				encontrado = true;
			}else {
				i++;
			}
		}
		
		if(encontrado) {
			return p;
		}else {
			return null;
		}
	}
}
